{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@feature/*": ["./feature/*"]
    },

    "types": ["bun-types", "node"],

    /* pick ONE style for Node builtins (see step 3) */
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
